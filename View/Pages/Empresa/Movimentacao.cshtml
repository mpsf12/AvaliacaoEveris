@page
@model View.Pages.Empresa.MovimentacaoModel

@{
    ViewData["Title"] = "Movimentacões";
}

<h2>Movimentacões</h2>

<p>
    @*<a asp-page="Create">Create New</a>*@
    @*<a asp-page="./Details" asp-route-id="@Model.Empresa" class="btn btn-info">Details</a>*@
    <a asp-page="./Details" asp-route-id="@Model.Empresa.Id" class="btn btn-primary">Voltar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Quantidade
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoMovimentacao[0].Data)
            </th>
            <th>
                Produto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProdutoMovimentacao) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movimentacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProdutoNavigation.NomeProduto)
            </td>
        </tr>
}
    </tbody>
</table>
